<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data class="TilerBinding">
        <variable
            name="tiler"
            type="com.example.ramesh.justtail.models.Tiler"
            />
    </data>
<android.support.v7.widget.CardView
    android:id="@+id/item_ticket"
    android:layout_width="match_parent"
    android:layout_margin="5sp"
    app:cardCornerRadius="5sp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/selected_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image"
            android:layout_width="80sp"
            android:layout_height="100sp"
            android:maxHeight="100sp"
            android:scaleType="fitXY"
            android:layout_alignParentLeft="true"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/tiler_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:layout_toRightOf="@id/image"
            android:text="@{tiler.name}"
            android:textColor="#000000"
            android:textSize="20sp"
            app:fontFamily="@font/averia_serif_libre" />
        <LinearLayout
            android:id="@+id/phone_layout"
            android:orientation="horizontal"
            android:layout_below="@id/tiler_name"
            android:layout_width="wrap_content"
            android:layout_marginHorizontal="5sp"
            android:layout_toRightOf="@id/image"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/phone_icon"
                android:src="@drawable/ic_action_name"
                android:layout_width="15sp"
                android:layout_gravity="center"
                android:layout_toRightOf="@id/image"
                android:layout_below="@+id/tiler_name"
                android:layout_height="15sp" />
            <TextView
                android:id="@+id/mobile_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="3sp"
                android:layout_marginVertical="5sp"
                android:text="@{tiler.mobile}"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />
        </LinearLayout>
        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{tiler.address}"
            android:layout_marginLeft="5sp"
            android:layout_marginVertical="5sp"
            android:layout_below="@id/phone_layout"
            android:layout_toRightOf="@id/image"
            android:layout_toLeftOf="@id/rb_vvm"/>
        <RatingBar
            android:id="@+id/rb_vvm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5sp"
            android:isIndicator="true"
            android:numStars="5"
            android:rating="@{tiler.rating}"
            android:layout_below="@id/phone_layout"
            android:max="5"
            android:layout_marginHorizontal="10dp"
            android:stepSize="1"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/select_layout"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image_selected"
            android:layout_width="match_parent"
            android:layout_height="150sp"
            android:maxHeight="150sp"
            android:scaleType="fitXY"
            android:layout_alignParentLeft="true"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:id="@+id/tailor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_selected"
            android:layout_marginVertical="5sp"
            android:textSize="20sp"
            android:text="@{tiler.name}"
            android:layout_centerHorizontal="true"/>
        <LinearLayout
            android:id="@+id/phone_layout_selected"
            android:orientation="horizontal"
            android:layout_below="@id/tailor_name"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="5sp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/phone_icon_selected"
                android:src="@drawable/ic_action_name"
                android:layout_width="15sp"
                android:layout_gravity="center"
                android:layout_height="15sp" />
            <TextView
                android:id="@+id/mobile_number_selected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="3sp"
                android:layout_marginVertical="5sp"
                android:text="@{tiler.mobile}"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />
        </LinearLayout>
        <TextView
            android:id="@+id/address_selected"
            android:orientation="horizontal"
            android:layout_below="@id/phone_layout_selected"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@{tiler.address}"
            android:layout_marginHorizontal="5sp"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
</layout>